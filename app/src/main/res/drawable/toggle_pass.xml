<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:state_pressed="true"
        android:drawable="@android:drawable/btn_dialog"
        /> //currently pressed turning the toggle on
    <item android:state_pressed="true" android:drawable="@android:drawable/btn_dialog"/> //currently pressed turning the toggle off
    <item android:state_checked="true" android:drawable="@android:drawable/btn_dialog"/> //not pressed default checked state
    <item android:drawable="@android:drawable/btn_dialog"/> //default non-pressed non-checked
</selector>